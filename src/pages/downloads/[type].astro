---
import Layout from "../../layouts/Layout.astro"
import DownloadsCompoent from "../../components/Downloads.vue"
export function getStaticPaths() {
  return [
    {params: {type: 'stable'}},
    {params: {type: 'beta'}}
  ];
}
const { type } = Astro.params
---


<Layout title="Ani - 下载">
    <div class="w-full xl:w-3/5 mx-auto py-6 px-4 space-y-3">
        <h2 class="text-3xl px-3 py-1 text-white font-bold">下载 Ani</h2>
        <DownloadsCompoent type={type} client:load/>
    </div>
</Layout>
